{
  "manifest_version": 2,
  "name": "linkinflo",
  "version": "1.0",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "downloads",
    "activeTab",
    "notifications",
    "https://www.linkedin.com/*",
    "https://api.linkinflo.com",
    "storage"
  ],
  "icons": {
    "16": "logo.png",
    "64": "64.png",
    "128": "128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
